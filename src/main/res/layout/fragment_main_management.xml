<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_section_management"
            android:paddingBottom="16dp"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/server_props_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/pref_title_server_info"
            android:gravity="start|center_vertical"
            android:visibility="visible"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/server_accounts_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/user_accounts"
            android:gravity="start|center_vertical"
            android:visibility="visible"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/server_bans_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/action_server_banned_users"
            android:gravity="start|center_vertical"
            android:visibility="visible"
            android:paddingStart="16dp" />

        <Button
            android:id="@+id/server_stats_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_server_stats"
            android:gravity="start|center_vertical"
            android:visibility="visible"
            android:paddingStart="16dp" />

    </LinearLayout>
</ScrollView>